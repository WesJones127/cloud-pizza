{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "es2020"
    ],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "outDir": "dist"
  },
  "include": [
    "**/*.ts",
    "test/**/*.test.ts",
    "jest.config.js"
  ],
  "exclude": [
    "node_modules",
    "cdk.out",
    "dist"
  ]
}